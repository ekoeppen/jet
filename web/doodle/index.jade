    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    title JET Doodle
    base(href='/')
    
    link(rel="stylesheet", href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css")

  body
    #layout.pure-g
      .pure-u-1-24
      #main.pure-u-22-24
